{
   "name": "simple-node-mvc-starter-project",
   "description": "Simple Node.js MVC starter project",
   "version": "0.0.0",
   "license": "MIT",
   "type": "module",
   "module": "server.js",
   "main": "server.js",
   "repository": "github:dna-engine/simple-node-mvc-starter-project",
   "homepage": "https://github.com/dna-engine/simple-node-mvc-starter-project",
   "bugs": "https://github.com/dna-engine/simple-node-mvc-starter-project/issues",
   "docs": "https://github.com/dna-engine/simple-node-mvc-starter-project#readme",
   "keywords": [
      "jamstack",
      "javascript",
      "mvc",
      "node",
      "typescript"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "node": true,
      "browser": true,
      "mocha": true,
      "globals": {
         "app": true,
         "fetchJson": true
      }
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "runScriptsConfig": {
      "clean": [
         "rimraf build dist"
      ],
      "build": [
         "jshint . --exclude-path .gitignore",
         "eslint --max-warnings 0 . --ext .ts",
         "tsc",
         "copy-folder src/web-app --ext=.html build/2-dev/web-app",
         "html-validator build/2-dev",
         "rollup build/1-pre/web-app/ts/app.js --file build/2-dev/web-app/app.bundle.js --name app --format iife --globals dna-engine:globalThis,fetch-json:globalThis,pretty-print-json:globalThis",
         "copy-folder src/web-app --ext=.html build/3-min/web-app",
         "uglifyjs build/2-dev/web-app/app.bundle.js --output build/3-min/web-app/app.bundle.js",
         "rev-web-assets build/3-min/web-app build/4-rev/web-app"
      ],
      "dist": [
         "copy-folder build/1-pre/api-server --ext=.js dist/api-server",
         "add-dist-header build/4-rev/web-app dist/web-app"
      ],
      "dev": [
         "tsc --watch",
         "chokidar 'src/web-app/**/*.html' --command 'npm run step:20'",
         "chokidar 'build/1-pre/web-app/**/*.js' --command 'rollup --config'",
         "nodemon --watch server.js --watch build/1-pre/api-server",
         "browser-sync build/2-dev/web-app --watch"
      ]
   },
   "scripts": {
      "pretest": "run-scripts clean build dist",
      "test": "mocha spec/*.spec.js --require spec/fixtures/setup-teardown.js --timeout 5000",
      "dev": "npm test && run-scripts dev --parallel",
      "prod": "NODE_ENV=production npm start"
   },
   "dependencies": {
      "chalk": "~5.3",
      "cors": "~2.8",
      "dotenv": "~16.3",
      "express": "~4.18",
      "fetch-json": "~3.2",
      "http-terminator": "~3.2",
      "lokijs": "~1.5"
   },
   "devDependencies": {
      "@types/cors": "~2.8",
      "@types/express": "~4.17",
      "@types/gapi.auth2": "~0.0",
      "@types/lokijs": "~1.5",
      "@types/node": "~20.4",
      "@typescript-eslint/eslint-plugin": "~6.1",
      "@typescript-eslint/parser": "~6.1",
      "add-dist-header": "~1.1",
      "assert-deep-strict-equal": "~1.1",
      "browser-sync": "~2.29",
      "chokidar-cli": "~3.0",
      "copy-file-util": "~1.1",
      "copy-folder-util": "~1.1",
      "csso-cli": "~4.0",
      "dna-engine": "~3.0",
      "eslint": "~8.45",
      "jshint": "~2.13",
      "mocha": "~10.2",
      "nodemon": "~3.0",
      "open": "~9.1",
      "pretty-print-json": "~2.0",
      "puppeteer": "~20.9",
      "puppeteer-browser-ready": "~1.2",
      "rev-web-assets": "~1.2",
      "rimraf": "~5.0",
      "rollup": "~3.26",
      "run-scripts-util": "~1.2",
      "typescript": "~5.1",
      "uglify-js": "~3.17",
      "w3c-html-validator": "~1.4",
      "web-ignition": "~2.0"
   }
}
