{
   "name": "simple-node-mvc-starter-project",
   "description": "Simple Node.js MVC starter project",
   "version": "0.0.0",
   "license": "MIT",
   "type": "module",
   "main": "server.js",
   "repository": "github:dnajs/simple-node-mvc-starter-project",
   "homepage": "https://github.com/dnajs/simple-node-mvc-starter-project",
   "bugs": "https://github.com/dnajs/simple-node-mvc-starter-project/issues",
   "docs": "https://github.com/dnajs/simple-node-mvc-starter-project#readme",
   "keywords": [
      "jamstack",
      "javascript",
      "mvc",
      "node",
      "typescript"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "node": true,
      "browser": true,
      "jquery": true,
      "mocha": true,
      "globals": {
         "app": true,
         "fetchJson": true,
         "globalThis": true
      }
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "scripts": {
      "lint": "   jshint . --exclude node_modules,build,dist && eslint --max-warnings 0 . --ext .ts",
      "tsc": "    tsc --version && tsc --project .",
      "posttsc": "copyfiles --up 2 'build/step0-tsc/api-server/**/*.js' dist",
      "preroll": "copyfiles --up 1 'src/web-app/**/*.html' ./build/step1-staging",
      "roll": "   rollup --config",
      "pretest": "npm run lint && rimraf build dist **/.DS_Store && npm run tsc && npm run roll",
      "test": "   mocha spec/*.spec.js --require spec/fixtures/setup-teardown.js --timeout 5000",
      "predev": " npm test",
      "dev": "    webPort=8080 nodemon",
      "prod": "   NODE_ENV=production npm start"
   },
   "dependencies": {
      "chalk": "~4.1",
      "cors": "~2.8",
      "dotenv": "~10.0",
      "express": "~4.17",
      "fetch-json": "~2.5",
      "http-terminator": "~3.0",
      "lokijs": "~1.5"
   },
   "devDependencies": {
      "@babel/core": "~7.14",
      "@babel/preset-env": "~7.14",
      "@types/cors": "~2.8",
      "@types/express": "~4.17",
      "@types/gapi.auth2": "0.0.55",
      "@types/jquery": "~3.5",
      "@types/lokijs": "~1.5",
      "@types/node": "~16.4",
      "@typescript-eslint/eslint-plugin": "~4.28",
      "@typescript-eslint/parser": "~4.28",
      "assert-deep-strict-equal": "~0.0",
      "copyfiles": "~2.4",
      "dna.js": "~1.8",
      "eslint": "~7.31",
      "jquery": "~3.6",
      "jshint": "~2.13",
      "mocha": "~9.0",
      "node-fetch": "~2.6",
      "nodemon": "~2.0",
      "open": "~8.2",
      "pretty-print-json": "~1.0",
      "puppeteer": "~10.1",
      "puppeteer-browser-ready": "~0.3",
      "rimraf": "~3.0",
      "rollup": "~2.54",
      "typescript": "~4.3",
      "w3c-html-validator": "~0.7",
      "web-ignition": "~1.4"
   }
}
