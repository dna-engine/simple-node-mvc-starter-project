{
   "name": "simple-node-mvc-starter-project",
   "description": "Simple Node.js MVC starter project",
   "version": "0.0.0",
   "license": "MIT",
   "type": "module",
   "module": "server.js",
   "main": "server.js",
   "repository": "github:dna-engine/simple-node-mvc-starter-project",
   "homepage": "https://github.com/dna-engine/simple-node-mvc-starter-project",
   "bugs": "https://github.com/dna-engine/simple-node-mvc-starter-project/issues",
   "docs": "https://github.com/dna-engine/simple-node-mvc-starter-project#readme",
   "keywords": [
      "jamstack",
      "javascript",
      "mvc",
      "node",
      "typescript"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "node": true,
      "browser": true,
      "jquery": true,
      "mocha": true,
      "globals": {
         "app": true,
         "fetchJson": true
      }
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "scripts": {
      "step:01": "rimraf build dist **/.DS_Store",
      "step:02": "jshint . --exclude-path .gitignore",
      "step:03": "eslint --max-warnings 0 . --ext .ts",
      "step:10": "tsc",
      "step:20": "npm run stage-html",
      "step:21": "html-validator build/2-dev",
      "step:30": "copy-folder src/web-app --ext=.html build/3-min/web-app",
      "step:31": "rollup --config",
      "step:40": "rev-web-assets build/3-min/web-app build/4-rev/web-app --manifest",
      "step:50": "copy-folder build/1-tsc/api-server --ext=.js dist/api-server",
      "step:51": "copy-folder build/4-rev/web-app dist/web-app",
      "pretest": "npm-run-all step:*",
      "dev:tsc": "    tsc --watch",
      "dev:html": "   chokidar 'src/web-app/**/*.html' --command 'npm run stage-html'",
      "dev:js": "     chokidar 'build/1-tsc/web-app/**/*.js' --command 'rollup --config'",
      "dev:node": "   nodemon --watch server.js --watch build/1-tsc/api-server",
      "dev:browser": "browser-sync build/2-dev/web-app --watch",
      "stage-html": "copy-folder src/web-app --ext=.html build/2-dev/web-app",
      "test": "mocha spec/*.spec.js --require spec/fixtures/setup-teardown.js --timeout 5000",
      "dev": "npm test && npm-run-all --parallel dev:*",
      "prod": "NODE_ENV=production npm start"
   },
   "dependencies": {
      "chalk": "~5.1",
      "cors": "~2.8",
      "dotenv": "~16.0",
      "express": "~4.18",
      "fetch-json": "~2.7",
      "http-terminator": "~3.2",
      "lokijs": "~1.5"
   },
   "devDependencies": {
      "@babel/core": "~7.19",
      "@babel/preset-env": "~7.19",
      "@rollup/plugin-babel": "~6.0",
      "@types/cors": "~2.8",
      "@types/express": "~4.17",
      "@types/gapi.auth2": "~0.0",
      "@types/jquery": "~3.5",
      "@types/lokijs": "~1.5",
      "@types/node": "~18.8",
      "@typescript-eslint/eslint-plugin": "~5.40",
      "@typescript-eslint/parser": "~5.40",
      "assert-deep-strict-equal": "~1.0",
      "browser-sync": "~2.27",
      "chokidar-cli": "~3.0",
      "copy-file-util": "~0.1",
      "copy-folder-util": "~0.2",
      "csso-cli": "~4.0",
      "dna-engine": "~2.2",
      "eslint": "~8.25",
      "jquery": "~3.6",
      "jshint": "~2.13",
      "mocha": "~10.0",
      "node-fetch": "~3.2",
      "nodemon": "~2.0",
      "npm-run-all2": "~6.0",
      "open": "~8.4",
      "pretty-print-json": "~1.3",
      "puppeteer": "~18.2",
      "puppeteer-browser-ready": "~0.5",
      "rev-web-assets": "~0.1",
      "rimraf": "~3.0",
      "rollup": "~2.79",
      "rollup-plugin-terser": "~7.0",
      "typescript": "~4.8",
      "uglify-js": "~3.17",
      "w3c-html-validator": "~1.2",
      "web-ignition": "~1.5"
   }
}
