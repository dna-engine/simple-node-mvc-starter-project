{
   "name": "simple-node-mvc-starter-project",
   "description": "Simple Node.js MVC starter project",
   "version": "0.0.0",
   "license": "MIT",
   "type": "module",
   "main": "server.js",
   "repository": "github:dnajs/simple-node-mvc-starter-project",
   "homepage": "https://github.com/dnajs/simple-node-mvc-starter-project",
   "bugs": "https://github.com/dnajs/simple-node-mvc-starter-project/issues",
   "docs": "https://github.com/dnajs/simple-node-mvc-starter-project#readme",
   "keywords": [
      "jamstack",
      "javascript",
      "mvc",
      "node",
      "typescript"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "node": true,
      "browser": true,
      "jquery": true,
      "mocha": true,
      "globals": {
         "app": true,
         "fetchJson": true,
         "globalThis": true
      }
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "scripts": {
      "step01": "rimraf build dist **/.DS_Store",
      "step02": "jshint . --exclude node_modules,build,dist",
      "step03": "eslint --max-warnings 0 . --ext .ts",
      "step04": "tsc",
      "step05": "copyfiles --up 1 'src/web-app/**/*.html' build/step2-staging  #see: dev:html",
      "step06": "w3c-html-validator build/step2-staging",
      "step07": "copyfiles --up 1 'src/web-app/**/*.html' build/step3-minified",
      "step08": "rollup --config",
      "step09": "gulp hash-web-app",
      "step10": "copyfiles --up 2 'build/step1-tsc/api-server/**/*.js' dist",
      "step11": "copyfiles --up 2 'build/step4-hashed/web-app/**/*'    dist",
      "step12": "mocha spec/*.spec.js --require spec/fixtures/setup-teardown.js --timeout 5000",
      "dev:tsc": "    tsc --watch",
      "dev:html": "   chokidar 'src/web-app/**/*.html' --command 'npm run step05'",
      "dev:js": "     chokidar 'build/step1-tsc/web-app/**/*.js' --command 'rollup --config'",
      "dev:node": "   nodemon --watch build/step1-tsc/api-server",
      "dev:browser": "browser-sync build/step2-staging/web-app --watch",
      "test": "npm-run-all step*",
      "dev": "npm test && npm-run-all --parallel dev:*",
      "prod": "NODE_ENV=production npm start"
   },
   "dependencies": {
      "chalk": "~4.1",
      "cors": "~2.8",
      "dotenv": "~10.0",
      "express": "~4.17",
      "fetch-json": "~2.5",
      "http-terminator": "~3.0",
      "lokijs": "~1.5"
   },
   "devDependencies": {
      "@babel/core": "~7.14",
      "@babel/preset-env": "~7.14",
      "@rollup/plugin-babel": "~5.3",
      "@types/cors": "~2.8",
      "@types/express": "~4.17",
      "@types/gapi.auth2": "0.0.55",
      "@types/jquery": "~3.5",
      "@types/lokijs": "~1.5",
      "@types/node": "~16.4",
      "@typescript-eslint/eslint-plugin": "~4.28",
      "@typescript-eslint/parser": "~4.28",
      "assert-deep-strict-equal": "~0.0",
      "browser-sync": "~2.27",
      "chokidar-cli": "~3.0",
      "copyfiles": "~2.4",
      "dna.js": "~1.8",
      "eslint": "~7.31",
      "gulp": "~4.0",
      "gulp-rev-all": "~3.0",
      "gulp-size": "~4.0",
      "jquery": "~3.6",
      "jshint": "~2.13",
      "mocha": "~9.0",
      "node-fetch": "~2.6",
      "nodemon": "~2.0",
      "npm-run-all2": "~5.0",
      "open": "~8.2",
      "pretty-print-json": "~1.0",
      "puppeteer": "~10.1",
      "puppeteer-browser-ready": "~0.3",
      "rimraf": "~3.0",
      "rollup": "~2.55",
      "rollup-plugin-terser": "~7.0",
      "typescript": "~4.3",
      "w3c-html-validator": "~0.7",
      "web-ignition": "~1.4"
   }
}
