{
   "name": "simple-node-mvc-starter-project",
   "description": "Simple Node.js MVC starter project",
   "version": "0.0.0",
   "license": "MIT",
   "type": "module",
   "module": "server.js",
   "main": "server.js",
   "repository": {
      "type": "git",
      "url": "git+https://github.com/dna-engine/simple-node-mvc-starter-project.git"
   },
   "homepage": "https://github.com/dna-engine/simple-node-mvc-starter-project",
   "bugs": "https://github.com/dna-engine/simple-node-mvc-starter-project/issues",
   "docs": "https://github.com/dna-engine/simple-node-mvc-starter-project#readme",
   "keywords": [
      "jamstack",
      "javascript",
      "mvc",
      "node",
      "typescript"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "node": true,
      "browser": true,
      "mocha": true,
      "globals": {
         "app": true,
         "fetchJson": true
      }
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "runScriptsConfig": {
      "clean": [
         "rimraf build dist"
      ],
      "bundle-js": [
         "recursive-exec build/1-pre/web-app --ext=.js --exclude=+ 'rollup {{file}} --file build/2-dev/web-app/{{filename}} --name {{nameCamelCase}} --format iife --globals dna-engine:globalThis,fetch-json:globalThis,pretty-print-json:globalThis'"
      ],
      "build1-pre": [
         "jshint . --exclude-path .gitignore",
         "eslint --max-warnings 0 . --ext .ts",
         "tsc"
      ],
      "build2-dev": [
         "copy-folder src/web-app/+common --ext=.jpg,.png    build/2-dev/web-app",
         "replacer src/web-app --ext=.html --exclude=+ --pkg build/2-dev/web-app --rename=index.html",
         "lessc src/web-app/+common/common.less              build/2-dev/web-app/common.css",
         "recursive-exec src/web-app --ext=.less --exclude=+ 'lessc {{file}} build/2-dev/web-app/{{basename}}.css'",
         "run-scripts bundle-js"
      ],
      "build3-min": [
         "copy-folder    build/2-dev/web-app --ext=.html,.png                      build/3-min/web-app",
         "recursive-exec build/2-dev/web-app --ext=.css 'csso {{file}} --output    build/3-min/web-app/{{filename}}'",
         "recursive-exec build/2-dev/web-app --ext=.js 'uglifyjs {{file}} --output build/3-min/web-app/{{filename}}'"
      ],
      "build4-rev": [
         "rev-web-assets  build/3-min/web-app build/4-rev/web-app",
         "copy-folder     build/1-pre/api-server --ext=.js dist/api-server",
         "copy-folder     build/4-rev/web-app/assets       dist/web-app/assets",
         "add-dist-header build/4-rev/web-app --recursive  dist/web-app",
         "html-validator dist/web-app"
      ],
      "dev": [
         "tsc --watch",
         "chokidar 'src/web-app/**/*.html'       --command 'run-scripts build2-dev'",
         "chokidar 'build/1-pre/web-app/**/*.js' --command 'run-scripts bundle-js'",
         "nodemon --watch server.js --watch build/1-pre/api-server",
         "browser-sync . --startPath build/2-dev/web-app --files build/2-dev/web-app"
      ]
   },
   "scripts": {
      "pretest": "run-scripts clean build1-pre build2-dev build3-min build4-rev",
      "test": "mocha spec/*.spec.js --require spec/fixtures/setup-teardown.js --timeout 7000",
      "dev": "npm test && run-scripts dev --parallel",
      "prod": "NODE_ENV=production npm start"
   },
   "dependencies": {
      "chalk": "~5.3",
      "cors": "~2.8",
      "dotenv": "~16.3",
      "express": "~4.18",
      "fetch-json": "~3.2",
      "http-terminator": "~3.2",
      "lokijs": "~1.5",
      "pretty-print-json": "~2.0"
   },
   "devDependencies": {
      "@fortawesome/fontawesome-free": "~6.4",
      "@types/cors": "~2.8",
      "@types/express": "~4.17",
      "@types/gapi.auth2": "~0.0",
      "@types/lokijs": "~1.5",
      "@types/node": "~20.6",
      "@typescript-eslint/eslint-plugin": "~6.7",
      "@typescript-eslint/parser": "~6.7",
      "add-dist-header": "~1.3",
      "assert-deep-strict-equal": "~1.1",
      "browser-sync": "~2.29",
      "chokidar-cli": "~3.0",
      "copy-file-util": "~1.1",
      "copy-folder-util": "~1.1",
      "csso-cli": "~4.0",
      "dna-engine": "~3.0",
      "eslint": "~8.50",
      "jshint": "~2.13",
      "less": "~4.2",
      "mocha": "~10.2",
      "nodemon": "~3.0",
      "puppeteer": "~21.3",
      "puppeteer-browser-ready": "~1.3",
      "recursive-exec": "~0.1",
      "replacer-util": "~1.2",
      "rev-web-assets": "~1.3",
      "rimraf": "~5.0",
      "rollup": "~3.29",
      "run-scripts-util": "~1.2",
      "typescript": "~5.2",
      "uglify-js": "~3.17",
      "w3c-html-validator": "~1.5",
      "web-ignition": "~2.0"
   }
}
